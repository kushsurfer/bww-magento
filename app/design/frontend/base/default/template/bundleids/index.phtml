<?php
 
	$bundled_product = new Mage_Catalog_Model_Product();		
	$bundled_product->load(21);
 	
 	
	// 21 is your bundle product ID
 	 $opt = Mage::getModel('bundle/option')->getResourceCollection()->setProductIdFilter(21)->setPositionOrder()->joinValues($this->getStoreFilter());
 	 $titles = $opt->getItems('default_title');

 	 $optionTitle = array();
 	 $bundled_items = array();

 	 foreach ($titles as $key => $value){
 	 	$val = $value->getData();
 	 	$optionTitle[$value['option_id']] =  $value['default_title'];
 	 	$bundled_items[$value['option_id']]['title'] = $value['default_title'];
 	 
 	}
 	

 	$selectionCollection = $bundled_product->getTypeInstance(true)->getSelectionsCollection(
		$bundled_product->getTypeInstance(true)->getOptionsIds($bundled_product), $bundled_product
	);
 	
	foreach($selectionCollection as $option) 
	{	
		
		$bundled_items[$option->getOptionId()]['productIDs'][] = $option->product_id;
	}
 
	// print_r($bundled_items);
	// echo '<br/><br/><br/>';
	echo json_encode($bundled_items);

 
?>